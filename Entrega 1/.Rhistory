library(tidyverse)
library(ggplot2)
datos <- read.csv("~/Universidad/Datasets/Predictiva/dataset.csv")
# Vista preliminar
summary(datos)
glimpse(datos)
# Chequeo de NAs
colnames(datos)[apply(datos, 2, anyNA)] # No hay columnas con missings
colnames(datos)
# Definir las variables que quieres incluir en el boxplot
variables <- c("popularity", "duration_ms", "danceability", "energy", "key",
"loudness", "speechiness", "acousticness", "instrumentalness",
"liveness", "valence", "tempo", "time_signature")
# Crear un dataframe largo para ggplot
data_long <- reshape2::melt(datos, id.vars = NULL, measure.vars = variables)
# Crear el boxplot usando ggplot2 y aÃ±adir puntos con opacidad
boxplot <- ggplot(data_long, aes(x = variable, y = value)) +
geom_boxplot() +
geom_jitter(aes(color = variable), alpha = 0.5, width = 0.2) +  # Capa de puntos
labs(x = "Variable", y = "Valor", title = "Boxplots de Variables") +
theme(axis.text.x = element_text(angle = 45, hjust = 1))  # Rotar etiquetas en el eje x
# Mostrar el boxplot
print(boxplot)
